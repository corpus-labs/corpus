{
  "name": "corpus",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules && lerna clean",
    "start:app": "lerna run dev --scope @corpus-labs/app",
    "start:snap": "lerna run serve --scope @corpus-labs/snap",
    "build:app": "lerna run build --scope @corpus-labs/app",
    "build:snap": "lerna run build --scope @corpus-labs/snap",
    "build:swap": "lerna run build --scope @corpus-labs/swap"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
